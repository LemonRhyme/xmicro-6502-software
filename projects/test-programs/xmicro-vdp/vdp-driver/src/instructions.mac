		LDX #>(.RIGHT (.TCOUNT ({SRC})-1, {SRC}))
		STX 1+DEST
	.ELSE							;ASSUME ABSOLUTE OR ZERO PAGE
		LDX SRC
		STX DEST
		LDX 1+SRC
		STX 1+DEST
	.ENDIF
.ENDMACRO

