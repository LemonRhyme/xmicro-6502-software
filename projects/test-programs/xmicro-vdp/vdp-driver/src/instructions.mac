;-----------------------------------------------------------------------------
; ADD WITHOUT CARRY
;-----------------------------------------------------------------------------
.MACRO ADD VAL
	CLC
	ADC VAL
.ENDMACRO


.MACRO PUSH_AXY
	PHA		; PUSH ACCUMULATOR TO STACK
	PHX		; PUSH X TO STACK
	PHY		; PUSH Y TO STACK
.ENDMACRO

.MACRO PULL_AXY
	PLY		; PULL Y FROM STACK
	PLX		; PULL X FROM STACK
	PLA		; PULL A FROM STACK
.ENDMACRO

.MACRO PUSH_AX
	PHA
	PHX
.ENDMACRO

.MACRO PULL_AX
	PLX
	PLA
.ENDMACRO

